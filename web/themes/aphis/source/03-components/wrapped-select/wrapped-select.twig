{% set classes = [
  'c-wrapped-select',
  modifier_classes ? modifier_classes : ''
] %}

<div {{ add_attributes({ class: classes }) }}>
  <label class="usa-label" for="{{ dropdown_id }}">{{ dropdown_label }}</label>
  <select class="{{ classes }}" name="{{ dropdown_id }}" id="{{ dropdown_id }}"{% if dropdown_disabled %} disabled{% endif %}>
    {% block option_list %}
      {% for option in dropdown_options %}
        <option value="{{ option.value }}"{% if option.disabled %} disabled{% endif %}>{{ option.label }}</option>
      {% endfor %}
    {% endblock %}
  </select>
</div>
